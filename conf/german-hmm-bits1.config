#Auto-generated config file for voice hmm-bits1

name = german-hmm-bits1
german-voice.version = 3.5.0
voice.version = 3.5.0

# Declare "group names" as component that other components can require.
# These correspond to abstract "groups" of which this component is an instance.
provides = \
         german-voice \
         hmm-voice

# List the dependencies, as a whitespace-separated list.
# For each required component, an optional minimum version and an optional
# download url can be given.
# We can require a component by name or by an abstract "group name"
# as listed under the "provides" element.
requires = \
   german \
   marybase \
   german-targetfeatures \
   hmm 


requires.marybase.version = 3.1.0
requires.marybase.download = http://mary.dfki.de/download/mary-install-3.x.x.jar
requires.german.version = 3.1.0
requires.german.download = http://mary.dfki.de/download/mary-install-3.x.x.jar
requires.hmm.version = 3.5.0

####################################################################
####################### Module settings  ###########################
####################################################################
# For keys ending in ".list", values will be appended across config files,
# so that .list keys can occur in several config files.
# For all other keys, values will be copied to the global config, so
# keys should be unique across config files.

hmm.voices.list = \
   hmm-bits1

# If this setting is not present, a default value of 0 is assumed.
voice.hmm-bits1.wants.to.be.default = 0

# Set your voice specifications
voice.hmm-bits1.gender = female
voice.hmm-bits1.locale = de
voice.hmm-bits1.domain = general
voice.hmm-bits1.samplingRate = 16000

Unsupported locale de
# Sampa mapping for German voices 
voice.hmm-bits1.sampamap = \
=6->6 \
=n->n \
=m->m \
=N->N \
=l->l \
i->i: \
e->e: \
u->u: \
o->o: 


# HMM Voice-specific files
# Information about trees
voice.hmm-bits1.Ftd = MARY_BASE/lib/voices/hmm-bits1/tree-dur.inf
voice.hmm-bits1.Ftf = MARY_BASE/lib/voices/hmm-bits1/tree-lf0.inf
voice.hmm-bits1.Ftm = MARY_BASE/lib/voices/hmm-bits1/tree-mgc.inf
voice.hmm-bits1.Fts = MARY_BASE/lib/voices/hmm-bits1/tree-str.inf


# Information about means and variances PDFs 
voice.hmm-bits1.Fmd = MARY_BASE/lib/voices/hmm-bits1/dur.pdf
voice.hmm-bits1.Fmf = MARY_BASE/lib/voices/hmm-bits1/lf0.pdf
voice.hmm-bits1.Fmm = MARY_BASE/lib/voices/hmm-bits1/mgc.pdf
voice.hmm-bits1.Fms = MARY_BASE/lib/voices/hmm-bits1/str.pdf


# Information about Global Mean and Variance PDFs
voice.hmm-bits1.useGV = true
voice.hmm-bits1.Fgvf = MARY_BASE/lib/voices/hmm-bits1/gv-lf0-littend.pdf
voice.hmm-bits1.Fgvm = MARY_BASE/lib/voices/hmm-bits1/gv-mgc-littend.pdf
voice.hmm-bits1.Fgvs = MARY_BASE/lib/voices/hmm-bits1/gv-str-littend.pdf


# File for testing the HMMSynthesiser, example of a file in HTSCONTEXT format
voice.hmm-bits1.FLab = MARY_BASE/lib/voices/hmm-bits1/gen_US10010001_0.lab

# Requested features for the fullcontext names and tree questions 
voice.hmm-bits1.FeaList = MARY_BASE/lib/voices/hmm-bits1/feature_list_de_24.pl


# Filter taps of bandpass filters for mixed excitation 
# File format: for example if we have 5 filters each with 48 taps 
# then the taps are in a vector 
# tap[1][1] 
# ... 
# tap[1][48] 
# tap[2][1] 
# ... 
# tap[2][48] 
# ... 
# tap[5][1] 
# ... 
# tap[5][48] 
voice.hmm-bits1.Fif = MARY_BASE/lib/voices/hmm-bits1/mix_excitation_filters.txt
# Number of filters in bandpass bank, default 5 filters 
voice.hmm-bits1.in = 5
# Number of taps in bandpass filters, default 48 taps 
voice.hmm-bits1.io = 48
